{
  "name": "payments-service",
  "private": true,
  "version": "1.0.0",
  "description": "Payments service written in NestJS",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "g:docs": "compodoc -p tsconfig.json --theme stripe -d docs",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "serve:docs": "compodoc -p tsconfig.json -s --theme stripe -d docs",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/microservices": "^7.0.0",
    "@nestjs/platform-express": "^6.0.4",
    "@nestjs/websockets": "^7.0.0",
    "dotenv": "^16.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "stripe": "^10.5.0"
  },
  "devDependencies": {
    "@c_ogoo/tslint-config-og": "0.0.1",
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/testing": "7.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.17.13",
    "@types/jest": "24.0.11",
    "@types/node": "18.11.19",
    "@types/prettier": "2.7.0",
    "@types/rimraf": "3.0.2",
    "@types/stripe": "^6.31.14",
    "@types/supertest": "2.0.11",
    "jest": "24.9.0",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "24.3.0",
    "ts-node": "9.1.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.1.0",
    "tslint": "5.20.1",
    "tslint-clean-code": "^0.2.10",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "3.9.10",
    "typesync": "^0.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
